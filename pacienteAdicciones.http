# Crear un tipo de adicción (necesario para la relación)
POST http://localhost:4000/api/v1/tipos-adicciones HTTP/1.1
Content-Type: application/json
Authorization: Bearer <tu-token>

{
    "nombre": "Alcoholismo",
    "descripcion": "Dependencia al alcohol"
}

# Respuesta: {"_id": "67c7804f46481074013e0214", ...}

###

# Crear una adicción para un paciente
POST http://localhost:4000/api/v1/paciente-adicciones HTTP/1.1
Content-Type: application/json
Authorization: Bearer <tu-token>

{
    "paciente": "67c7801b46481074013e0210",
    "tipoAdiccion": "67c7804f46481074013e0214",
    "fechaInicio": "2020-01-01",
    "fechaFin": null,
    "notas": "Paciente en tratamiento"
}

# Respuesta: {"_id": "67c7807a46481074013e0218", ...}

###

# Listar todas las adicciones activas
GET http://localhost:4000/api/v1/paciente-adicciones HTTP/1.1
Content-Type: application/json
Authorization: Bearer <tu-token>

###

# Listar adicciones por paciente
GET http://localhost:4000/api/v1/paciente-adicciones/paciente/67c7801b46481074013e0210 HTTP/1.1
Content-Type: application/json
Authorization: Bearer <tu-token>

###

# Actualizar una adicción
PUT http://localhost:4000/api/v1/paciente-adicciones/67c7807a46481074013e0218 HTTP/1.1
Content-Type: application/json
Authorization: Bearer <tu-token>

{
    "fechaFin": "2025-03-05",
    "notas": "Tratamiento concluido"
}

###

# Eliminar lógicamente una adicción
PATCH http://localhost:4000/api/v1/paciente-adicciones/67c7807a46481074013e0218/soft-delete HTTP/1.1
Content-Type: application/json
Authorization: Bearer <tu-token>